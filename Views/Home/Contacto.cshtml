@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Contador de caracteres para el mensaje
        document.addEventListener('DOMContentLoaded', function() {
            const mensajeTextarea = document.getElementById('Mensaje');
            const charCount = document.getElementById('char-count');
            
            if (mensajeTextarea && charCount) {
                // Actualizar contador al cargar
                charCount.textContent = mensajeTextarea.value.length;
                
                // Actualizar contador mientras escribe
                mensajeTextarea.addEventListener('input', function() {
                    const length = this.value.length;
                    charCount.textContent = length;
                    
                    // Cambiar color seg√∫n l√≠mite
                    if (length > 900) {
                        charCount.style.color = '#dc3545'; // Rojo
                    } else if (length > 800) {
                        charCount.style.color = '#ffc107'; // Amarillo
                    } else {
                        charCount.style.color = 'var(--text-light-gray)'; // Normal
                    }
                });
            }
            
            // Validaci√≥n en tiempo real
            const form = document.querySelector('form');
            const inputs = form.querySelectorAll('input[required], select[required], textarea[required]');
            
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                });
                
                input.addEventListener('input', function() {
                    if (this.classList.contains('is-invalid')) {
                        validateField(this);
                    }
                });
            });
            
            function validateField(field) {
                const isValid = field.checkValidity();
                
                if (isValid) {
                    field.classList.remove('is-invalid');
                    field.classList.add('is-valid');
                } else {
                    field.classList.remove('is-valid');
                    field.classList.add('is-invalid');
                }
            }
            
            // Confirmar antes de enviar
            form.addEventListener('submit', function(e) {
                const nombre = document.getElementById('Nombre').value;
                const email = document.getElementById('Email').value;
                const asunto = document.getElementById('Asunto').value;
                
                if (nombre && email && asunto) {
                    const confirmed = confirm(`¬øConfirmas que quieres enviar este mensaje?\n\nDe: ${nombre}\nEmail: ${email}\nAsunto: ${asunto}`);
                    if (!confirmed) {
                        e.preventDefault();
                    }
                }
            });
        });
    </script>
    
