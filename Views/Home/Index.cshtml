@model IEnumerable<GrupoCeleste.Models.Pelicula>

@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1><i class="fas fa-film"></i> Bienvenido a CineVerse</h1>
        <p>Tu universo cinematográfico. Descubre, explora y disfruta las mejores películas.</p>
        <div class="mt-4">
            <a asp-controller="Peliculas" asp-action="Index" class="btn btn-danger btn-lg">
                <i class="fas fa-play"></i> Explorar Películas
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-lg">
                <i class="fas fa-user-plus"></i> Únete Ahora
            </a>
        </div>
    </div>
</section>

<!-- Featured Movies -->
<section class="container my-5">
    <h2 class="section-title">
        <i class="fas fa-star"></i> Películas Destacadas
    </h2>
    <div class="row g-4 mt-3">
        @if (Model != null && Model.Any())
        {
            @foreach (var pelicula in Model.Take(4))
            {
                <div class="col-md-6 col-lg-3">
                    <div class="movie-card">
                        <img src="@pelicula.ImagenUrl" alt="@pelicula.Titulo" />
                        <div class="movie-card-body">
                            <h5>@pelicula.Titulo</h5>
                            <p class="movie-genre">
                                <i class="fas fa-tag"></i> @pelicula.Genero
                            </p>
                            <p>@pelicula.Descripcion.Substring(0, Math.Min(80, pelicula.Descripcion.Length))...</p>
                            <div class="movie-rating">
                                <i class="fas fa-star"></i>
                                <span>@pelicula.Calificacion</span>
                            </div>
                            <a asp-controller="Peliculas" asp-action="Details" asp-route-id="@pelicula.Id" class="btn btn-danger btn-sm mt-3 w-100">
                                <i class="fas fa-info-circle"></i> Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <p class="text-center">No hay películas disponibles en este momento.</p>
            </div>
        }
    </div>
</section>

<!-- Genres Section -->
<section class="container my-5">
    <h2 class="section-title">
        <i class="fas fa-th"></i> Explora por Género
        @if (!string.IsNullOrEmpty(ViewBag.GeneroSeleccionado))
        {
            <small class="ms-3">
                <span class="badge bg-danger">Filtrado por: @ViewBag.GeneroSeleccionado</span>
                <a asp-action="Index" class="btn btn-sm btn-outline-light ms-2">
                    <i class="fas fa-times"></i> Limpiar
                </a>
            </small>
        }
    </h2>
    <div class="row g-4 mt-3">
        @{
            var iconos = new Dictionary<string, string> {
                {"Acción", "fa-fist-raised"},
                {"Drama", "fa-theater-masks"},
                {"Comedia", "fa-laugh"},
                {"Terror", "fa-ghost"},
                {"Romance", "fa-heart"},
                {"Sci-Fi", "fa-rocket"}
            };
        }
        @foreach (var genero in (string[])ViewBag.Generos)
        {
            var isActive = genero == ViewBag.GeneroSeleccionado;
            <div class="col-md-4 col-lg-2">
                <a asp-action="Index" asp-route-genero="@genero" class="text-decoration-none">
                    <div class="genre-card @(isActive ? "active" : "")">
                        <i class="fas @(iconos[genero])"></i>
                        <h5>@genero</h5>
                        @if (Model.Count(p => p.Genero.ToLower() == genero.ToLower()) > 0)
                        {
                            <span class="badge bg-danger">
                                @Model.Count(p => p.Genero.ToLower() == genero.ToLower())
                            </span>
                        }
                    </div>
                </a>
            </div>
        }
    </div>
</section>
