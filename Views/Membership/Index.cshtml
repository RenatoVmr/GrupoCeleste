@{
    ViewBag.Title = "Membresías";
    var membresias = new[] {
        new { Id = 1, Nombre = "Básica", Precio = 19.90, Descripcion = "Acceso básico a películas", Icono = "fas fa-star" },
        new { Id = 2, Nombre = "Estándar", Precio = 29.90, Descripcion = "Acceso completo con descargas", Icono = "fas fa-crown" },
        new { Id = 3, Nombre = "Premium", Precio = 39.90, Descripcion = "Acceso premium con contenido exclusivo", Icono = "fas fa-gem" }
    };
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1><i class="fas fa-crown"></i> Membresías CineVerse</h1>
        <p>Elige el plan perfecto para tu experiencia cinematográfica</p>
    </div>
</section>

<!-- Membership Plans -->
<section class="container my-5">
    <div class="row g-4 justify-content-center">
        @foreach (var m in membresias)
        {
            <div class="col-md-6 col-lg-4">
                <div class="membership-card">
                    <div class="membership-header">
                        <i class="@m.Icono membership-icon"></i>
                        <h4>@m.Nombre</h4>
                        <div class="price">
                            <span class="currency">S/</span>
                            <span class="amount">@m.Precio.ToString("F2")</span>
                            <span class="period">/mes</span>
                        </div>
                    </div>
                    <div class="membership-body">
                        <p class="description">@m.Descripcion</p>
                        <ul class="features">
                            <li><i class="fas fa-check"></i> Acceso ilimitado</li>
                            <li><i class="fas fa-check"></i> Calidad HD</li>
                            @if (m.Id >= 2)
                            {
                                <li><i class="fas fa-check"></i> Descargas offline</li>
                            }
                            @if (m.Id >= 3)
                            {
                                <li><i class="fas fa-check"></i> Contenido exclusivo</li>
                                <li><i class="fas fa-check"></i> Soporte prioritario</li>
                            }
                        </ul>
                        <a class="btn btn-danger btn-lg w-100 mt-3" asp-action="Seleccionar" asp-route-id="@m.Id" asp-route-nombre="@m.Nombre" asp-route-precio="@m.Precio">
                            <i class="fas fa-shopping-cart"></i> Seleccionar Plan
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
