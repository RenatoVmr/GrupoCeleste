@model IEnumerable<GrupoCeleste.Models.Pelicula>

@{
    ViewData["Title"] = "Catálogo de Películas";
}

<!-- Header del Catálogo -->
<section class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="section-title">
            <i class="fas fa-film"></i> Catálogo de Películas
        </h1>
    </div>

    <!-- Barra de búsqueda -->
    <form method="get" asp-action="Index" class="mb-3">
        <div class="input-group">
            <input type="search" name="search" value="@ViewBag.SearchTerm" class="form-control" placeholder="Buscar por título o director..." />
            <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Buscar</button>
        </div>
    </form>

    <!-- Grid de Películas -->
    <div class="row g-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var pelicula in Model)
            {
                <div class="col-md-6 col-lg-3">
                    <div class="movie-card">
                        <img src="@pelicula.ImagenUrl" alt="@pelicula.Titulo" onerror="this.src='https://via.placeholder.com/500x750?text=Sin+Imagen'" />
                        <div class="movie-card-body">
                            <h5>@pelicula.Titulo</h5>
                            <p class="movie-genre">
                                <i class="fas fa-tag"></i> @pelicula.Genero
                            </p>
                            <p class="mb-2">
                                @if (pelicula.Descripcion.Length > 100)
                                {
                                    @pelicula.Descripcion.Substring(0, 100)<text>...</text>
                                }
                                else
                                {
                                    @pelicula.Descripcion
                                }
                            </p>
                            <div class="movie-rating mb-3">
                                <i class="fas fa-star"></i>
                                <span>@pelicula.Calificacion</span>
                                <small style="color: var(--text-light-gray); margin-left: 0.5rem;">
                                    / 10
                                </small>
                            </div>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@pelicula.Id" class="btn btn-danger btn-sm flex-fill">
                                    <i class="fas fa-info-circle"></i> Ver Detalles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info text-center" style="background-color: var(--secondary-black); border-color: var(--primary-red); color: var(--text-gray);">
                    <i class="fas fa-exclamation-circle"></i> No hay películas disponibles en este momento.
                </div>
            </div>
        }
    </div>
</section>

<!-- Sección de Estadísticas -->
<section class="container my-5">
    <div class="row text-center">
        <div class="col-md-4 mb-3">
            <div style="background-color: var(--secondary-black); padding: 2rem; border-radius: 12px; border: 2px solid var(--primary-red);">
                <i class="fas fa-film" style="font-size: 3rem; color: var(--primary-red); margin-bottom: 1rem;"></i>
                <h3 style="color: white; font-weight: bold;">@Model.Count()</h3>
                <p style="color: var(--text-light-gray);">Películas Disponibles</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div style="background-color: var(--secondary-black); padding: 2rem; border-radius: 12px; border: 2px solid var(--primary-red);">
                <i class="fas fa-star" style="font-size: 3rem; color: #fbbf24; margin-bottom: 1rem;"></i>
                <h3 style="color: white; font-weight: bold;">@Model.Average(p => p.Calificacion).ToString("F1")</h3>
                <p style="color: var(--text-light-gray);">Calificación Promedio</p>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div style="background-color: var(--secondary-black); padding: 2rem; border-radius: 12px; border: 2px solid var(--primary-red);">
                <i class="fas fa-th-list" style="font-size: 3rem; color: var(--accent-red); margin-bottom: 1rem;"></i>
                <h3 style="color: white; font-weight: bold;">@Model.Select(p => p.Genero).Distinct().Count()</h3>
                <p style="color: var(--text-light-gray);">Géneros Diferentes</p>
            </div>
        </div>
    </div>
</section>
