@model GrupoCeleste.Models.ViewModels.DetallePeliculaViewModel

@{
    ViewData["Title"] = Model.Pelicula.Titulo;
}

<div class="container-fluid px-4">
    <!-- Hero Section con Breadcrumb -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="hero-detail-section fade-in-up">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb breadcrumb-modern">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> Inicio</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index"><i class="fas fa-film"></i> Películas</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Pelicula.Titulo</li>
                    </ol>
                </nav>
                <h1 class="display-4 fw-bold text-white mb-0">@Model.Pelicula.Titulo</h1>
                <p class="lead text-white-50 mb-0">@Model.Pelicula.Director • @Model.Pelicula.AnioLanzamiento</p>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Imagen de la película -->
        <div class="col-lg-4 col-md-5 mb-4">
            <div class="movie-poster-container slide-in-left">
                @if (!string.IsNullOrEmpty(Model.Pelicula.ImagenUrl))
                {
                    <img src="@Model.Pelicula.ImagenUrl" class="movie-poster img-fluid" alt="@Model.Pelicula.Titulo">
                }
                else
                {
                    <div class="movie-poster-placeholder">
                        <i class="fas fa-film fa-5x"></i>
                        <p class="mt-3">Sin imagen disponible</p>
                    </div>
                }
                
                @if (User.Identity!.IsAuthenticated)
                {
                    <div class="action-buttons mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Pelicula.Id" class="btn btn-warning btn-action">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Pelicula.Id" class="btn btn-danger btn-action">
                            <i class="fas fa-trash"></i> Eliminar
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Información de la película -->
        <div class="col-lg-8 col-md-7">
            <div class="movie-info-container fade-in-up">
                <!-- Rating y género destacados -->
                <div class="movie-badges mb-4">
                    <span class="rating-badge">
                        <i class="fas fa-star"></i>
                        <span class="rating-number">@Model.Pelicula.Calificacion.ToString("F1")</span>
                        <span class="rating-total">/10</span>
                    </span>
                    <span class="genre-badge">@Model.Pelicula.Genero</span>
                </div>

                <!-- Información básica -->
                <div class="movie-details-grid mb-4">
                    <div class="detail-item">
                        <i class="fas fa-user-tie detail-icon"></i>
                        <div>
                            <label>Director</label>
                            <p>@Model.Pelicula.Director</p>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-calendar detail-icon"></i>
                        <div>
                            <label>Año</label>
                            <p>@Model.Pelicula.AnioLanzamiento</p>
                        </div>
                    </div>
                    <div class="detail-item">
                        <i class="fas fa-clock detail-icon"></i>
                        <div>
                            <label>Duración</label>
                            <p>@Model.Pelicula.DuracionMinutos min</p>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Pelicula.Actores))
                    {
                        <div class="detail-item full-width">
                            <i class="fas fa-users detail-icon"></i>
                            <div>
                                <label>Reparto</label>
                                <p>@Model.Pelicula.Actores</p>
                            </div>
                        </div>
                    }
                </div>

            <div class="mb-4">
                <h3>Sinopsis</h3>
                <p class="fs-5">@Model.Pelicula.Descripcion</p>
            </div>

            @if (!string.IsNullOrEmpty(Model.Pelicula.TrailerUrl))
            {
                <div class="mb-4">
                    <h3>Trailer</h3>
                    <div class="ratio ratio-16x9">
                        @{
                            string videoId = "";
                            if (Model.Pelicula.TrailerUrl.Contains("youtube.com/watch?v="))
                            {
                                videoId = Model.Pelicula.TrailerUrl.Split("v=")[1].Split("&")[0];
                            }
                            else if (Model.Pelicula.TrailerUrl.Contains("youtu.be/"))
                            {
                                videoId = Model.Pelicula.TrailerUrl.Split("youtu.be/")[1].Split("?")[0];
                            }
                        }
                        @if (Model.Pelicula.TrailerUrl.Contains("youtube.com") || Model.Pelicula.TrailerUrl.Contains("youtu.be"))
                        {
                            <iframe src="https://www.youtube.com/embed/@videoId" allowfullscreen></iframe>
                        }
                        else
                        {
                            <video controls>
                                <source src="@Model.Pelicula.TrailerUrl" type="video/mp4">
                                Tu navegador no soporta el elemento video.
                            </video>
                        }
                    </div>
                </div>
            }

            <div class="mb-3">
                <small class="text-muted">Agregado el @Model.Pelicula.FechaCreacion.ToString("dd/MM/yyyy")</small>
            </div>
        </div>
    </div>

    <!-- Películas similares -->
    @if (Model.PeliculasSimilares.Any())
    {
        <hr class="my-5">
        <div class="row">
            <div class="col-12">
                <h3>Películas similares</h3>
                <p class="text-muted">Otras películas del género @Model.Pelicula.Genero</p>
            </div>
        </div>

        <div class="row">
            @foreach (var pelicula in Model.PeliculasSimilares)
            {
                <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(pelicula.ImagenUrl))
                        {
                            <img src="@pelicula.ImagenUrl" class="card-img-top" alt="@pelicula.Titulo" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-film fa-2x text-muted"></i>
                            </div>
                        }
                        <div class="card-body p-2">
                            <h6 class="card-title">@pelicula.Titulo</h6>
                            <p class="card-text small text-muted">@pelicula.AnioLanzamiento</p>
                            <a asp-action="Details" asp-route-id="@pelicula.Id" class="btn btn-sm btn-primary">Ver</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>