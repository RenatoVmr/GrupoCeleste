@model IEnumerable<Mensaje>
@{
    ViewData["Title"] = "Mensajes de Contacto - Admin";
}

<div class="hero-section">
    <div class="container">
        <h1 class="section-title text-center">Panel de Administración</h1>
        <p class="lead text-center">Gestión de Mensajes de Contacto</p>
    </div>
</div>

<div class="container mt-5">
    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="movie-card">
                <div class="movie-card-body text-center">
                    <i class="fas fa-envelope fa-3x text-danger mb-3"></i>
                    <h4 style="color: white;">@ViewBag.TotalMensajes</h4>
                    <p style="color: var(--text-gray);">Total de Mensajes</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="movie-card">
                <div class="movie-card-body text-center">
                    <i class="fas fa-bell fa-3x text-danger mb-3"></i>
                    <h4 style="color: white;">@ViewBag.MensajesNoLeidos</h4>
                    <p style="color: var(--text-gray);">Mensajes No Leídos</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Lista de Mensajes -->
    <div class="movie-card">
        <div class="movie-card-body">
            <h3 style="color: white; margin-bottom: 1.5rem;">
                <i class="fas fa-list me-2"></i>Mensajes Recibidos
            </h3>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-dark table-striped">
                        <thead>
                            <tr>
                                <th>Estado</th>
                                <th>Fecha</th>
                                <th>Nombre</th>
                                <th>Email</th>
                                <th>Asunto</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mensaje in Model)
                            {
                                <tr class="@(mensaje.Leido ? "" : "table-warning")">
                                    <td>
                                        @if (mensaje.Leido)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Leído
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-bell"></i> Nuevo
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            @mensaje.Fecha.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </td>
                                    <td>@mensaje.Nombre</td>
                                    <td>
                                        <a href="mailto:@mensaje.Email" style="color: var(--primary-red);">
                                            @mensaje.Email
                                        </a>
                                    </td>
                                    <td>
                                        <span class="text-truncate d-inline-block" style="max-width: 200px;">
                                            @mensaje.Asunto
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@mensaje.Id" 
                                               class="btn btn-outline-danger btn-sm">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            
                                            @if (!mensaje.Leido)
                                            {
                                                <form asp-action="MarkAsRead" asp-route-id="@mensaje.Id" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success btn-sm" 
                                                            title="Marcar como leído">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                </form>
                                            }
                                            
                                            <form asp-action="Delete" asp-route-id="@mensaje.Id" method="post" 
                                                  class="d-inline" onsubmit="return confirm('¿Estás seguro de eliminar este mensaje?')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-secondary btn-sm" 
                                                        title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-5x text-muted mb-3"></i>
                    <h4 style="color: var(--text-gray);">No hay mensajes</h4>
                    <p style="color: var(--text-light-gray);">Aún no se han recibido mensajes de contacto.</p>
                </div>
            }
        </div>
    </div>
</div>