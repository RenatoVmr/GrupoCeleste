@model GrupoCeleste.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="auth-container">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="auth-card fade-in-up">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="fas fa-sign-in-alt"></i>
                    </div>
                    <h2 class="auth-title">¡Bienvenido de vuelta!</h2>
                    <p class="auth-subtitle">Inicia sesión en tu cuenta</p>
                </div>
                
                <form asp-action="Login" method="post" class="auth-form">
                    <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>
                    <input asp-for="ReturnUrl" type="hidden" />
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Email" class="form-control form-control-modern" id="floatingEmail" placeholder="correo@ejemplo.com" />
                        <label for="floatingEmail"><i class="fas fa-envelope me-2"></i>Correo Electrónico</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-4">
                        <input asp-for="Password" class="form-control form-control-modern" id="floatingPassword" placeholder="Contraseña" />
                        <label for="floatingPassword"><i class="fas fa-lock me-2"></i>Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check">
                            <input asp-for="RecordarCredenciales" class="form-check-input" />
                            <label asp-for="RecordarCredenciales" class="form-check-label">Recordarme</label>
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-modern w-100 mb-4">
                        <i class="fas fa-sign-in-alt me-2"></i>Iniciar Sesión
                    </button>
                </form>
                
                <div class="auth-footer">
                    <p>¿No tienes una cuenta? <a asp-action="Register" class="auth-link">Regístrate aquí</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}