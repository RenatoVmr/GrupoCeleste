@model GrupoCeleste.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card" style="background-color: var(--secondary-black); border: 2px solid var(--primary-red);">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4" style="color: white;">
                        <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                    </h2>
                    <p class="text-center" style="color: var(--text-light-gray);">
                        Accede a tu cuenta de CineVerse
                    </p>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--tertiary-black); border-color: var(--text-light-gray); color: var(--text-gray);">
                                    <i class="fas fa-envelope"></i>
                                </span>
                                <input asp-for="Email" class="form-control" placeholder="correo@ejemplo.com" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--tertiary-black); border-color: var(--text-light-gray); color: var(--text-gray);">
                                    <i class="fas fa-lock"></i>
                                </span>
                                <input asp-for="Password" class="form-control" placeholder="Tu contraseña" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-4 form-check">
                            <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                            <label asp-for="RememberMe" class="form-check-label" style="color: var(--text-gray);">
                            </label>
                        </div>

                        <button type="submit" class="btn btn-danger w-100 mb-3">
                            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                        </button>

                        <p class="text-center" style="color: var(--text-gray);">
                            ¿No tienes cuenta? 
                            <a asp-action="Register" style="color: var(--primary-red); font-weight: bold;">
                                Regístrate aquí
                            </a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
